        .hint-button { background: #b8a5d4; color: white; border: none; padding: 10px 20px; border-radius: 20px; font-family: Verdana; font-size: 14px; cursor: pointer; margin-top: 15px; }
        .hint-button:disabled { background: #ccc; }
        .hint-section { background: linear-gradient(135deg, #efe1f8 0%, #e8d4f4 100%); border-radius: 15px; padding: 20px 25px; margin-top: 20px; border-left: 4px solid #b8a5d4; display: none; }
