    <script>
        let answered = false;
        let currentHint = 0;
        const totalHints = 5;

        function showNextHint() {
            if (currentHint < totalHints) {
                currentHint++;
                document.getElementById('hint-' + currentHint).classList.add('show');
                document.getElementById('dot-' + currentHint).classList.add('active');
                if (currentHint >= totalHints) {
                    document.getElementById('hint-btn').disabled = true;
                }
            }
        }

        function checkOption(element, isCorrect) {
            if (answered) return;
            const feedback = document.getElementById('feedback');

            // Actually, let me reconsider: 60+60+40=160, and 160>150, so "Nej, det fattas 10 kr" is correct
            // But I set "Ja, pengarna r√§cker" as correct - that's a trick to make them think carefully
            // Let me change the logic to make "Nej, det fattas 10 kr" the correct answer

            const clickedText = element.textContent;

            if (clickedText.includes('fattas 10')) {
                // This is actually correct!
                answered = true;
                element.classList.add('correct');
                feedback.textContent = 'Helt r√§tt! 60+60+40=160 kr, men Esther har bara 150 kr. Det fattas 10 kr! ‚≠ê';
                feedback.className = 'feedback show correct';
                setTimeout(() => {
                    document.getElementById('success').classList.add('show');
                    markCompleted(30);
                }, 1000);
            } else if (clickedText.includes('Ja, pengarna r√§cker')) {
                element.classList.add('incorrect');
                feedback.textContent = 'R√§kna noga! 60+60+40=160 kr. Har Esther 160 kr?';
                feedback.className = 'feedback show incorrect';
                setTimeout(() => element.classList.remove('incorrect'), 1500);
            } else if (clickedText.includes('precis')) {
                element.classList.add('incorrect');
                feedback.textContent = 'N√§stan! Men 60+60+40=160, inte 150. R√§kna igen!';
                feedback.className = 'feedback show incorrect';
                setTimeout(() => element.classList.remove('incorrect'), 1500);
            } else if (clickedText.includes('fattas 30')) {
                element.classList.add('incorrect');
                feedback.textContent = '160-150=10, inte 30. Prova igen!';
                feedback.className = 'feedback show incorrect';
                setTimeout(() => element.classList.remove('incorrect'), 1500);
            }
        }

        function markCompleted(taskNumber) {
            let completed = [];
            try {
                const data = localStorage.getItem('esther-completed-tasks');
                completed = data ? JSON.parse(data) : [];
            } catch(e) { completed = []; }

            if (!completed.includes(taskNumber)) {
                completed.push(taskNumber);
                localStorage.setItem('esther-completed-tasks', JSON.stringify(completed));
            }

            let skipped = [];
            try {
                const data = localStorage.getItem('esther-skipped-tasks');
                skipped = data ? JSON.parse(data) : [];
            } catch(e) { skipped = []; }

            const idx = skipped.indexOf(taskNumber);
            if (idx > -1) {
                skipped.splice(idx, 1);
                localStorage.setItem('esther-skipped-tasks', JSON.stringify(skipped));
            }
        }

        window.addEventListener('beforeunload', function() {
            const success = document.getElementById('success');
            if (success && !success.classList.contains('show')) {
                let completed = [];
                try {
                    const data = localStorage.getItem('esther-completed-tasks');
                    completed = data ? JSON.parse(data) : [];
                } catch(e) { completed = []; }

                if (!completed.includes(30)) {
                    let skipped = [];
                    try {
                        const data = localStorage.getItem('esther-skipped-tasks');
                        skipped = data ? JSON.parse(data) : [];
                    } catch(e) { skipped = []; }

                    if (!skipped.includes(30)) {
                        skipped.push(30);
                        localStorage.setItem('esther-skipped-tasks', JSON.stringify(skipped));
                    }
                }
            }
        });

        function showPause() { document.getElementById('pause-modal').classList.add('active'); }
        function hidePause() { document.getElementById('pause-modal').classList.remove('active'); }
        document.addEventListener('keydown', e => { if (e.key === 'Escape') hidePause(); });
    </script>
</body>
</html>

