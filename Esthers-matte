                            <p class="hint-step-text">
                                N√§mnaren √§r samma i b√•da br√•ken: <strong>7</strong>.
                                <br>Svaret ska ocks√• ha <strong>7 som n√§mnare</strong>!
                            </p>
                        </div>

                        <div class="hint-step" id="hint-2">
                            <div class="hint-step-number">STEG 2</div>
                            <p class="hint-step-text">
                                Subtrahera t√§ljarna: <strong>5 ‚àí 2 = 3</strong>
                                <br><br>
                                ‚ú® Svaret blir allts√• <strong>3/7</strong>!
                            </p>
                        </div>

                        <div class="hint-progress">
                            <span class="hint-dot" id="dot-1"></span>
                            <span class="hint-dot" id="dot-2"></span>
                        </div>
                    </div>
                </div>

                <!-- FRAMG√ÖNG -->
                <div class="success-section" id="success">
                    <p class="success-message">üéâ Perfekt! 5/7 ‚àí 2/7 = 3/7. Du fattar det h√§r, Esther!</p>
                    <a href="uppgift-08-blandad-form.html" class="next-btn">
                        N√§sta uppgift ‚Üí
                    </a>
                </div>
            </div>
        </main>
    </div>

    <button class="pause-button" onclick="showPause()">üßò Paus</button>

    <div class="pause-modal" id="pause-modal">
        <div class="pause-content">
            <h2>Paus! üåü</h2>
            <p>Du h√§nger med bra! Ta en paus.</p>
            <button class="pause-close" onclick="hidePause()">Jag √§r redo igen ‚Üí</button>
        </div>
    </div>

    <script>
        let attempts = 0;
        let currentHint = 0;
        const totalHints = 2;

        function showNextHint() {
            const hintSection = document.getElementById('hint-section');
            const hintButton = document.querySelector('.hint-button');

            if (!hintSection.classList.contains('show')) {
                hintSection.classList.add('show');
            }

            currentHint++;

            if (currentHint <= totalHints) {
                document.getElementById('hint-' + currentHint).classList.add('show');
                document.getElementById('dot-' + currentHint).classList.add('active');

                if (currentHint >= totalHints) {
                    hintButton.innerHTML = 'üí° Alla ledtr√•dar visade';
                    hintButton.disabled = true;
                }
            }
        }

        function checkAnswer() {
            const topInput = document.getElementById('answer-top');
            const bottomInput = document.getElementById('answer-bottom');
            const feedback = document.getElementById('feedback');

            const top = topInput.value.trim();
            const bottom = bottomInput.value.trim();

            attempts++;

            if (top === '3' && bottom === '7') {
                topInput.classList.add('correct');
                bottomInput.classList.add('correct');
                feedback.textContent = 'Helt r√§tt! 5 ‚àí 2 = 3 och n√§mnaren f√∂rblir 7. Bra jobbat! ‚≠ê';
                feedback.className = 'feedback show correct';

                setTimeout(() => {
                    document.getElementById('success').classList.add('show');
                    markCompleted(7);
                }, 1000);
            } else {
                topInput.classList.add('incorrect');
                bottomInput.classList.add('incorrect');
                topInput.classList.remove('correct');
                bottomInput.classList.remove('correct');

                if (attempts === 1) {
                    feedback.textContent = 'N√§stan! Dra bort t√§ljarna: 5 ‚àí 2. N√§mnaren (7) f√∂rblir samma!';
                } else {
                    feedback.textContent = 'Tips: 5 ‚àí 2 = 3. N√§mnare: 7. Svaret √§r 3/7!';
                }
                feedback.className = 'feedback show incorrect';

                setTimeout(() => {
                    topInput.classList.remove('incorrect');
                    bottomInput.classList.remove('incorrect');
                }, 1500);
            }
        }

        function markCompleted(taskNumber) {
            let completed = [];
            try {
                const data = localStorage.getItem('esther-completed-tasks');
                completed = data ? JSON.parse(data) : [];
            } catch(e) { completed = []; }

            if (!completed.includes(taskNumber)) {
                completed.push(taskNumber);
                localStorage.setItem('esther-completed-tasks', JSON.stringify(completed));
            }

            let skipped = [];
            try {
                const data = localStorage.getItem('esther-skipped-tasks');
                skipped = data ? JSON.parse(data) : [];
            } catch(e) { skipped = []; }

            const idx = skipped.indexOf(taskNumber);
            if (idx > -1) {
                skipped.splice(idx, 1);
                localStorage.setItem('esther-skipped-tasks', JSON.stringify(skipped));
            }
        }

        window.addEventListener('beforeunload', function() {
            const success = document.getElementById('success');
            if (success && !success.classList.contains('show')) {
                let completed = [];
                try {
                    const data = localStorage.getItem('esther-completed-tasks');
                    completed = data ? JSON.parse(data) : [];
                } catch(e) { completed = []; }

                if (!completed.includes(7)) {
                    let skipped = [];
                    try {
                        const data = localStorage.getItem('esther-skipped-tasks');
                        skipped = data ? JSON.parse(data) : [];
                    } catch(e) { skipped = []; }

                    if (!skipped.includes(7)) {
                        skipped.push(7);
                        localStorage.setItem('esther-skipped-tasks', JSON.stringify(skipped));
                    }
                }
            }
        });

        function showPause() {
            document.getElementById('pause-modal').classList.add('active');
        }

        function hidePause() {
            document.getElementById('pause-modal').classList.remove('active');
        }

        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') hidePause();
        });

        document.querySelectorAll('.answer-input').forEach(input => {
            input.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') checkAnswer();
            });
        });
    </script>
</body>
</html>

