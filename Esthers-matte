                <div class="visual-example">
                    <div class="ski-emoji">‚õ∑Ô∏è</div>
                    <div style="font-weight: 600; color: var(--text-dark);">3/4 av 1 200 m = ?</div>
                </div>

                <p class="encouragement">
                    Tips: Dela f√∂rst med 4, g√•ngra sedan med 3! üéø
                </p>

                <div class="task-section">
                    <h2 class="task-title">‚úèÔ∏è R√§kna ut!</h2>
                    <p class="task-instruction">
                        Hur m√•nga meter har Esther √•kt? Ta fram papper och penna!
                    </p>

                    <div class="answer-input-container">
                        <input type="text" id="answer" class="answer-input" maxlength="4" placeholder="? m">
                        <button class="check-btn" onclick="checkAnswer()">Kolla svaret</button>
                    </div>

                    <div class="feedback" id="feedback"></div>

                    <button class="hint-button" onclick="showNextHint()">üí° Jag beh√∂ver en ledtr√•d</button>

                    <div class="hint-section" id="hint-section">
                        <div class="hint-step" id="hint-1">
                            <div class="hint-step-number">STEG 1</div>
                            <p class="hint-step-text">
                                1/4 av 1200 = 1200 √∑ 4 = 300 m
                            </p>
                        </div>
                        <div class="hint-step" id="hint-2">
                            <div class="hint-step-number">STEG 2</div>
                            <p class="hint-step-text">
                                3/4 = tre fj√§rdedelar = 3 √ó 300 = ?
                            </p>
                        </div>
                        <div class="hint-progress">
                            <span class="hint-dot" id="dot-1"></span>
                            <span class="hint-dot" id="dot-2"></span>
                        </div>
                    </div>
                </div>

                <div class="success-section" id="success">
                    <p class="success-message">üéâ Perfekt! 1200√∑4=300, 300√ó3=900 m. 40 uppgifter klara! üéø</p>
                    <a href="uppgift-41-blandad-form.html" class="next-btn">N√§sta uppgift ‚Üí</a>
                </div>
            </div>
        </main>
    </div>

    <button class="pause-button" onclick="showPause()">üßò Paus</button>

    <div class="pause-modal" id="pause-modal">
        <div class="pause-content">
            <h2>Paus! üåü</h2>
            <p>Du har klarat 40 uppgifter - fantastiskt!</p>
            <button class="pause-close" onclick="hidePause()">Jag √§r redo igen ‚Üí</button>
        </div>
    </div>

    <script>
        let currentHint = 0;

        function showNextHint() {
            const hintSection = document.getElementById('hint-section');
            const hintButton = document.querySelector('.hint-button');
            if (!hintSection.classList.contains('show')) hintSection.classList.add('show');
            currentHint++;
            if (currentHint <= 2) {
                document.getElementById('hint-' + currentHint).classList.add('show');
                document.getElementById('dot-' + currentHint).classList.add('active');
                if (currentHint >= 2) hintButton.disabled = true;
            }
        }

        function checkAnswer() {
            const input = document.getElementById('answer');
            const feedback = document.getElementById('feedback');
            const answer = input.value.trim().replace(/\s*m\s*$/i, '');

            if (answer === '900') {
                input.classList.add('correct');
                feedback.textContent = 'Helt r√§tt! 1200√∑4√ó3 = 900 meter ‚≠ê';
                feedback.className = 'feedback show correct';
                setTimeout(() => {
                    document.getElementById('success').classList.add('show');
                    markCompleted(40);
                }, 1000);
            } else {
                input.classList.add('incorrect');
                feedback.textContent = 'Prova: 1200√∑4=300, sedan 300√ó3=? üí™';
                feedback.className = 'feedback show incorrect';
                setTimeout(() => input.classList.remove('incorrect'), 1500);
            }
        }

        function markCompleted(taskNumber) {
            let completed = [];
            try { completed = JSON.parse(localStorage.getItem('esther-completed-tasks')) || []; } catch(e) {}
            if (!completed.includes(taskNumber)) {
                completed.push(taskNumber);
                localStorage.setItem('esther-completed-tasks', JSON.stringify(completed));
            }
        }

        window.addEventListener('beforeunload', function() {
            if (!document.getElementById('success').classList.contains('show')) {
                let completed = []; try { completed = JSON.parse(localStorage.getItem('esther-completed-tasks')) || []; } catch(e) {}
                if (!completed.includes(40)) {
                    let skipped = []; try { skipped = JSON.parse(localStorage.getItem('esther-skipped-tasks')) || []; } catch(e) {}
                    if (!skipped.includes(40)) { skipped.push(40); localStorage.setItem('esther-skipped-tasks', JSON.stringify(skipped)); }
                }
            }
        });

        document.getElementById('answer').addEventListener('keypress', e => { if (e.key === 'Enter') checkAnswer(); });
        function showPause() { document.getElementById('pause-modal').classList.add('active'); }
        function hidePause() { document.getElementById('pause-modal').classList.remove('active'); }
        document.addEventListener('keydown', e => { if (e.key === 'Escape') hidePause(); });
    </script>
</body>
</html>

