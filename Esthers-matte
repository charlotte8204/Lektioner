    <script>
        let answered = false;
        let currentHint = 0;

        function showNextHint() {
            const hintSection = document.getElementById('hint-section');
            const hintButton = document.querySelector('.hint-button');
            if (!hintSection.classList.contains('show')) hintSection.classList.add('show');
            currentHint++;
            if (currentHint <= 1) {
                document.getElementById('hint-' + currentHint).classList.add('show');
                document.getElementById('dot-' + currentHint).classList.add('active');
                hintButton.disabled = true;
            }
        }

        function checkOption(element, isCorrect) {
            if (answered) return;
            const feedback = document.getElementById('feedback');
            if (isCorrect) {
                answered = true;
                element.classList.add('correct');
                feedback.textContent = 'Perfekt! 11√∑4 = 2 rest 3 ‚≠ê';
                feedback.className = 'feedback show correct';
                setTimeout(() => {
                    document.getElementById('success').classList.add('show');
                    markCompleted(43);
                }, 1000);
            } else {
                element.classList.add('incorrect');
                feedback.textContent = 'Dividera 11 med 4 - vad blir rest? üí™';
                feedback.className = 'feedback show incorrect';
                setTimeout(() => element.classList.remove('incorrect'), 1500);
            }
        }

        function markCompleted(taskNumber) {
            let completed = [];
            try { completed = JSON.parse(localStorage.getItem('esther-completed-tasks')) || []; } catch(e) {}
            if (!completed.includes(taskNumber)) {
                completed.push(taskNumber);
                localStorage.setItem('esther-completed-tasks', JSON.stringify(completed));
            }
        }

        window.addEventListener('beforeunload', function() {
            if (!document.getElementById('success').classList.contains('show')) {
                let completed = []; try { completed = JSON.parse(localStorage.getItem('esther-completed-tasks')) || []; } catch(e) {}
                if (!completed.includes(43)) {
                    let skipped = []; try { skipped = JSON.parse(localStorage.getItem('esther-skipped-tasks')) || []; } catch(e) {}
                    if (!skipped.includes(43)) { skipped.push(43); localStorage.setItem('esther-skipped-tasks', JSON.stringify(skipped)); }
                }
            }
        });

        function showPause() { document.getElementById('pause-modal').classList.add('active'); }
        function hidePause() { document.getElementById('pause-modal').classList.remove('active'); }
        document.addEventListener('keydown', e => { if (e.key === 'Escape') hidePause(); });
    </script>
</body>
</html>

