    <script>
        let attempts = 0;
        let currentHint = 0;
        const totalHints = 2;

        function showNextHint() {
            const hintSection = document.getElementById('hint-section');
            const hintButton = document.querySelector('.hint-button');
            if (!hintSection.classList.contains('show')) hintSection.classList.add('show');
            currentHint++;
            if (currentHint <= totalHints) {
                document.getElementById('hint-' + currentHint).classList.add('show');
                document.getElementById('dot-' + currentHint).classList.add('active');
                if (currentHint >= totalHints) {
                    hintButton.innerHTML = 'üí° Alla ledtr√•dar visade';
                    hintButton.disabled = true;
                }
            }
        }

        function checkAnswer() {
            const topInput = document.getElementById('answer-top');
            const bottomInput = document.getElementById('answer-bottom');
            const feedback = document.getElementById('feedback');
            const top = topInput.value.trim();
            const bottom = bottomInput.value.trim();
            attempts++;

            if (top === '4' && bottom === '6') {
                topInput.classList.add('correct');
                bottomInput.classList.add('correct');
                feedback.textContent = 'Perfekt! 2√ó2=4 och 3√ó2=6. Du kan f√∂rl√§nga br√•k! ‚≠ê';
                feedback.className = 'feedback show correct';
                setTimeout(() => {
                    document.getElementById('success').classList.add('show');
                    markCompleted(9);
                }, 1000);
            } else {
                topInput.classList.add('incorrect');
                bottomInput.classList.add('incorrect');
                if (attempts === 1) {
                    feedback.textContent = 'N√§stan! Multiplicera B√ÖDE t√§ljare och n√§mnare med 2.';
                } else {
                    feedback.textContent = 'Tips: 2√ó2=4 (t√§ljare) och 3√ó2=6 (n√§mnare). Svaret √§r 4/6!';
                }
                feedback.className = 'feedback show incorrect';
                setTimeout(() => {
                    topInput.classList.remove('incorrect');
                    bottomInput.classList.remove('incorrect');
                }, 1500);
            }
        }

        function markCompleted(taskNumber) {
            let completed = [];
            try {
                const data = localStorage.getItem('esther-completed-tasks');
                completed = data ? JSON.parse(data) : [];
            } catch(e) { completed = []; }

            if (!completed.includes(taskNumber)) {
                completed.push(taskNumber);
                localStorage.setItem('esther-completed-tasks', JSON.stringify(completed));
            }

            let skipped = [];
            try {
                const data = localStorage.getItem('esther-skipped-tasks');
                skipped = data ? JSON.parse(data) : [];
            } catch(e) { skipped = []; }

            const idx = skipped.indexOf(taskNumber);
            if (idx > -1) {
                skipped.splice(idx, 1);
                localStorage.setItem('esther-skipped-tasks', JSON.stringify(skipped));
            }
        }

        window.addEventListener('beforeunload', function() {
            const success = document.getElementById('success');
            if (success && !success.classList.contains('show')) {
                let completed = [];
                try {
                    const data = localStorage.getItem('esther-completed-tasks');
                    completed = data ? JSON.parse(data) : [];
                } catch(e) { completed = []; }

                if (!completed.includes(9)) {
                    let skipped = [];
                    try {
                        const data = localStorage.getItem('esther-skipped-tasks');
                        skipped = data ? JSON.parse(data) : [];
                    } catch(e) { skipped = []; }

                    if (!skipped.includes(9)) {
                        skipped.push(9);
                        localStorage.setItem('esther-skipped-tasks', JSON.stringify(skipped));
                    }
                }
            }
        });

        function showPause() { document.getElementById('pause-modal').classList.add('active'); }
        function hidePause() { document.getElementById('pause-modal').classList.remove('active'); }
        document.addEventListener('keydown', e => { if (e.key === 'Escape') hidePause(); });
        document.querySelectorAll('.answer-input').forEach(input => {
            input.addEventListener('keypress', e => { if (e.key === 'Enter') checkAnswer(); });
        });
    </script>
</body>
</html>

