        let attempts = 0;
        let currentHint = 0;
        const totalHints = 3;

        // === LEDTR√ÖD-FUNKTION ===
        function showNextHint() {
            const hintSection = document.getElementById('hint-section');
            const hintButton = document.querySelector('.hint-button');

            if (!hintSection.classList.contains('show')) {
                hintSection.classList.add('show');
            }

            currentHint++;

            if (currentHint <= totalHints) {
                document.getElementById('hint-' + currentHint).classList.add('show');
                document.getElementById('dot-' + currentHint).classList.add('active');

                if (currentHint < totalHints) {
                    hintButton.innerHTML = 'üí° Visa n√§sta steg (' + currentHint + '/' + totalHints + ')';
                } else {
                    hintButton.innerHTML = 'üí° Alla ledtr√•dar visade';
                    hintButton.disabled = true;
                    document.getElementById('hint-complete').classList.add('show');
                }
            }
        }

        function allowDrop(ev) {
            ev.preventDefault();
            ev.target.closest('.drop-zone').classList.add('highlight');
        }

        function dragLeave(ev) {
            ev.target.closest('.drop-zone').classList.remove('highlight');
        }

        function drag(ev) {
            ev.dataTransfer.setData("text", ev.target.id);
            ev.dataTransfer.setData("value", ev.target.dataset.value);
        }

        function drop(ev) {
            ev.preventDefault();
            const dropZone = ev.target.closest('.drop-zone');
            dropZone.classList.remove('highlight');

            const draggedId = ev.dataTransfer.getData("text");
            const value = ev.dataTransfer.getData("value");
            const draggedEl = document.getElementById(draggedId);

            // Markera som placerad
            draggedEl.classList.add('placed');

            // Uppdatera drop-zonen
            if (dropZone.id === 'drop-taljare') {
                taljareValue = value;
                document.getElementById('taljare-value').textContent = value;
            } else if (dropZone.id === 'drop-namnare') {
                namnareValue = value;
                document.getElementById('namnare-value').textContent = value;
            }
        }

        function checkAnswer() {
            const feedback = document.getElementById('feedback');
            const dropTaljare = document.getElementById('drop-taljare');
            const dropNamnare = document.getElementById('drop-namnare');

            attempts++;

            // Kolla om b√•da √§r ifyllda
            if (!taljareValue || !namnareValue) {
                feedback.textContent = 'Dra b√•da siffrorna till r√§tt ruta f√∂rst!';
                feedback.className = 'feedback show incorrect';
                return;
            }

            // Kolla svaret
            if (taljareValue === '5' && namnareValue === '8') {
                dropTaljare.classList.add('correct');
                dropNamnare.classList.add('correct');
                feedback.textContent = 'Helt r√§tt! 5 √§r t√§ljaren (√∂verst) och 8 √§r n√§mnaren (underst). ‚õ∑Ô∏è';
                feedback.className = 'feedback show correct';

                setTimeout(() => {
                    document.getElementById('success').classList.add('show');
                    markCompleted(3);
                }, 1000);
            } else {
                dropTaljare.classList.add('incorrect');
                dropNamnare.classList.add('incorrect');

                if (attempts === 1) {
                    feedback.textContent = 'N√§stan! Kom ih√•g: T√§ljaren √§r siffran √ñVERST i br√•ket.';
                } else {
                    feedback.textContent = 'Tips: I 5/8 st√•r 5 √∂verst (t√§ljare) och 8 underst (n√§mnare). F√∂rs√∂k igen!';
                }
                feedback.className = 'feedback show incorrect';

                // √Öterst√§ll f√∂r nytt f√∂rs√∂k
                setTimeout(() => {
                    resetDrag();
                }, 2000);
            }
        }

        function resetDrag() {
            taljareValue = null;
            namnareValue = null;

            document.getElementById('taljare-value').textContent = '?';
            document.getElementById('namnare-value').textContent = '?';

            document.querySelectorAll('.drop-zone').forEach(z => {
                z.classList.remove('correct', 'incorrect');
            });

            document.querySelectorAll('.draggable').forEach(d => {
                d.classList.remove('placed');
            });
        }

        function markCompleted(taskNumber) {
            let completed = [];
            try {
                const data = localStorage.getItem('esther-completed-tasks');
                completed = data ? JSON.parse(data) : [];
            } catch(e) { completed = []; }

            if (!completed.includes(taskNumber)) {
                completed.push(taskNumber);
                localStorage.setItem('esther-completed-tasks', JSON.stringify(completed));
            }

            let skipped = [];
            try {
                const data = localStorage.getItem('esther-skipped-tasks');
                skipped = data ? JSON.parse(data) : [];
            } catch(e) { skipped = []; }

            const idx = skipped.indexOf(taskNumber);
            if (idx > -1) {
                skipped.splice(idx, 1);
                localStorage.setItem('esther-skipped-tasks', JSON.stringify(skipped));
            }
        }

        window.addEventListener('beforeunload', function() {
            const success = document.getElementById('success');
            if (success && !success.classList.contains('show')) {
                let completed = [];
                try {
                    const data = localStorage.getItem('esther-completed-tasks');
                    completed = data ? JSON.parse(data) : [];
                } catch(e) { completed = []; }

                if (!completed.includes(3)) {
                    let skipped = [];
                    try {
                        const data = localStorage.getItem('esther-skipped-tasks');
                        skipped = data ? JSON.parse(data) : [];
                    } catch(e) { skipped = []; }

                    if (!skipped.includes(3)) {
                        skipped.push(3);
                        localStorage.setItem('esther-skipped-tasks', JSON.stringify(skipped));
                    }
                }
            }
        });

        function showPause() {
            document.getElementById('pause-modal').classList.add('active');
        }

        function hidePause() {
            document.getElementById('pause-modal').classList.remove('active');
        }

        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') hidePause();
        });

        // Touch-st√∂d f√∂r mobila enheter
        document.querySelectorAll('.draggable').forEach(item => {
            item.addEventListener('touchstart', handleTouchStart);
            item.addEventListener('touchend', handleTouchEnd);
        });

        let draggedItem = null;

        function handleTouchStart(e) {
            draggedItem = e.target;
            draggedItem.classList.add('dragging');
        }

        function handleTouchEnd(e) {
            if (!draggedItem) return;

            const touch = e.changedTouches[0];
            const dropZones = document.querySelectorAll('.drop-zone');

            dropZones.forEach(zone => {
                const rect = zone.getBoundingClientRect();
                if (touch.clientX >= rect.left && touch.clientX <= rect.right &&
                    touch.clientY >= rect.top && touch.clientY <= rect.bottom) {

                    const value = draggedItem.dataset.value;
                    draggedItem.classList.add('placed');

                    if (zone.id === 'drop-taljare') {
                        taljareValue = value;
                        document.getElementById('taljare-value').textContent = value;
                    } else if (zone.id === 'drop-namnare') {
                        namnareValue = value;
                        document.getElementById('namnare-value').textContent = value;
                    }
                }
            });

            draggedItem.classList.remove('dragging');
            draggedItem = null;
        }
    </script>
</body>
</html>

